---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("CS_1102"))
  .filter((post) => post.data.answers === false)
  .sort((a, b) => a.data.order - b.data.order);

// const posts = (await getCollection("CS_1102")).sort(
//   (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
// );
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
      .subtitle-in-index {
        min-width: 5rem;
      }
      @media (max-width: 350px) {
        .sub-container {
          margin-bottom: 0.5rem;
        }
      }
      @media (min-width: 350px) {
        .subtitle-in-index {
          min-width: 7rem;
        }
      }
      @media (max-width: 500px) {
        .subtitle-in-index {
          flex-direction: column;
        }
        .subtitle-in-index > .subtitle-in-index-number {
          font-size: 1.5rem;
          margin-top: 0.5rem;
        }
      }
      @media (min-width: 500px) {
        .subtitle-in-index > .subtitle-in-index-number {
          margin-left: 0.5rem;
          font-size: 1.25rem;
        }
        .subtitle-in-index {
          min-width: 8.5rem;
        }
        .sub-container {
          margin-bottom: -0.5rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li
                class="sub-container"
                style="display: flex; flex-direction: row; align-items: center; margin-top: 0rem; width: fit-content"
              >
                <h4
                  class="subtitle-in-index"
                  style="margin-right: 2.25rem; font-family: monospace; font-size: 1.1rem; display: inline-flex; line-height: 1rem; margin-bottom: 1.5rem;"
                >
                  <span>
                    {post.data.pubDate ? post.data.pubDate : post.data.subtitle}
                  </span>
                  <span class="subtitle-in-index-number">
                    {post.data.pubDate
                      ? post.data.pubDate
                      : post.data.subtitle_number}
                  </span>
                </h4>
                <a href={`/CS_1102/${post.slug}/`}>{post.data.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
